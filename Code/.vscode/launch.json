    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/../Bin/UbuntuDebug/CLGTest",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/../Bin/UbuntuDebug/",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
                {
                    "description": "Additional libs for gdb",
                    "text": "set env LD_LIBRARY_PATH=${workspaceFolder}/../Bin/UbuntuDebug/"
                }                
            ]
        }
    ]
}